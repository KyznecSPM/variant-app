{
  "buildCommand": "npm run build --prefix client",
  "installCommand": "npm install --prefix client && npm install --prefix api",
  "outputDirectory": "client/dist",
  "functions": {
    "api/src/vercel.ts": {
      "memory": 256,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/src/vercel" },
    { "source": "/(.*)", "destination": "/$1" }
  ]
}
